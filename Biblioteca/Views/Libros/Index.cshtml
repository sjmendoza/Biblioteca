@model IEnumerable<Biblioteca.Models.Libro>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Categoria.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Editorial.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Idioma.nombre)
        </th>
        <th>
            Cantidad Libros
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Categoria.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Editorial.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Idioma.nombre)
        </td>
        <th>
            @Html.Display("Cantidad Libros")
        </th>
        <td>
            @Html.ActionLink("Ejemplar", "Cantidad", new { id = item.LibroId }) |
            @Html.ActionLink("Details", "Details", new { id = item.LibroId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.LibroId })
        </td>
    </tr>
}

</table>
